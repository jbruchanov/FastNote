<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scurab.android.idearecorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	 <uses-permission android:name="android.permission.CAMERA" /> 
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-feature android:name="android.hardware.camera" android:required="false"/>
	
	
    <application
        android:name="com.scurab.android.idearecorder.IdeaRecorderApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="com.scurab.android.idearecorder.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.scurab.android.idearecorder.activity.WriteActivity" android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait"/>
        <activity android:name="com.scurab.android.idearecorder.activity.SpeechActivity" android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait"/>
        <activity android:name="com.scurab.android.idearecorder.activity.PhotoActivity" android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait"/>
        <activity android:name="com.scurab.android.idearecorder.activity.VideoActivity" android:theme="@android:style/Theme.Dialog" android:screenOrientation="portrait"/>
        
        <activity android:name="com.scurab.android.idearecorder.activity.ImagePreviewActivity"/>
        <activity android:name="com.scurab.android.idearecorder.activity.PreferencesActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>